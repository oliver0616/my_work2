@inproceedings{Prinsloo:2017:ELA:3027385.3027406,
 author = {Prinsloo, Paul and Slade, Sharon},
 title = {An Elephant in the Learning Analytics Room: The Obligation to Act},
 booktitle = {Proceedings of the Seventh International Learning Analytics \& Knowledge Conference},
 series = {LAK '17},
 year = {2017},
 isbn = {978-1-4503-4870-6},
 location = {Vancouver, British Columbia, Canada},
