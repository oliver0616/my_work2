@inproceedings{Dascalu:2015:RIT:2723576.2723647,
 author = {Dascalu, Mihai and Stavarache, Larise L. and Trausan-Matu, Stefan and Dessus, Philippe and Bianco, Maryse and McNamara, Danielle S.},
